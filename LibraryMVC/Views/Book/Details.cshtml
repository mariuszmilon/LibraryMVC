@model LibraryMVC.Models.BookDto

<h1>Book Details</h1>

<div>
    <hr />
    <div class="d-flex">
        <div class="w-50">
            <dl class="row">
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Author)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Author)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Publisher)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Publisher)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.Translation)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.Translation)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.NumberOfPages)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.NumberOfPages)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.DateOfPublication)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.DateOfPublication)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.IDNumber)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.IDNumber)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.NumberOfPiecesAvailable)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.NumberOfPiecesAvailable)
                </dd>
                <dt class = "col-sm-4">
                    @Html.DisplayNameFor(model => model.CategoryName)
                </dt>
                <dd class = "col-sm-8">
                    @Html.DisplayFor(model => model.CategoryName)
                </dd>
            </dl>
            <div class="mt-3">
                <button class="btn btn-dark my-3 me-3 px-3 py-1">
                    <a class="link-light text-decoration-none" asp-action="Index">Back to List</a>
                </button>
                <button class="btn btn-warning py-1 px-4">
                    <a class="link-light text-decoration-none" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                </button>
            </div>
        </div>
        <div class="w-50">
            <img class="w-50 img-fluid"  src="@Model.ImageUrl"
        </div>
    </div>
</div>

