@model IEnumerable<LibraryMVC.Models.UserDto>

<h1>See all borrowed books below</h1>
<partial name="_TempDataView" />
<table class="table">
    <thead>
        <tr>
            <th>
                Name of borrower
            </th>
            <th>
                Last name of borrower
            </th>
            <th>
                Email adress
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            <button class="btn btn-dark me-3 ms-5 py-1 px-3"><a class="link-light text-decoration-none" asp-action="Books" asp-route-id="@item.Id">Show borrowed books</a> </button>
                        </td>
                    </tr>
        }
    </tbody>
</table>
